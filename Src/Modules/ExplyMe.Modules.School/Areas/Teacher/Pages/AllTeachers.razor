                    <br>
                    <a href="#" class="d-grid col-6 btn btn-primary disabled mx-auto" aria-disabled="true" role="button" data-bs-toggle="button">Lista dos Professores</a>
                </div>

                <div class="col-8">
                    <div class="d-block card border mb-2">
                        <div class="row">
                            <div class="col m-2">
                                <img class="thumbnail rounded-circle mx-auto" src="https://lh3.googleusercontent.com/ogw/ADGmqu_ps7JAJA3G_lDLW_osAjIbc9-SYg2DRQzD_FkJtg=s32-c-mo" />
                            </div>
                            <div class="col m-2">
                                <span>Jorge Silva</span>
                            </div>
                            <div class="col m-2">
                                <button class="btn btn-outline-success btn-sm">Detalhes do Professor</button>
                            </div>
                            <div class="col m-2">
                                <button class="btn btn-outline-success btn-sm">Associar Professor</button>
                            </div>
                        </div>
                    </div>
                    <div class="d-block card border mb-2">
                        <div class="row">
                            <div class="col m-2">
                                <img class="thumbnail rounded-circle mx-auto" src="https://lh3.googleusercontent.com/ogw/ADGmqu_ps7JAJA3G_lDLW_osAjIbc9-SYg2DRQzD_FkJtg=s32-c-mo" />
                            </div>
                            <div class="col m-2">
                                <span>Carlos Soares</span>
                            </div>
                            <div class="col m-2">
                                <button class="btn btn-outline-success btn-sm">Detalhes do Professor</button>
                            </div>
                            <div class="col m-2">
                                <button class="btn btn-outline-success btn-sm">Associar Professor</button>
                            </div>
                        </div>
                    </div>
                    <a href="teacher/create" class="btn btn-success btn-lg mx-auto my-4 d-block" style="width:140px">Criar Professor</a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public static string Title => "Lista de Professores";

    [Parameter]
    public long ClassId { get; set; }

}
